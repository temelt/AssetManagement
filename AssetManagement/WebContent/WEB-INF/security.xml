<beans:beans xmlns="http://www.springframework.org/schema/security"
	xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
	http://www.springframework.org/schema/security
	http://www.springframework.org/schema/security/spring-security-3.2.xsd">

	<http pattern="/resources/**" security="none"/>
	<http pattern="/login.xhtml" security="none"/>

	<http use-expressions="true">	
		<intercept-url pattern="/secure/**" access="isAuthenticated()" />
		<form-login default-target-url="/secure/index.xhtml" login-page="/login.xhtml" />
		<access-denied-handler error-page="/accessDenied.xhtml" /> 
		<logout logout-url="/login.xhtml" invalidate-session="true" logout-success-url="/login.xhtml"/>		
	</http>

	<authentication-manager>
	  <authentication-provider user-service-ref="springUserServiceImpl">
	  <password-encoder hash="md5"></password-encoder>
	  </authentication-provider>
	</authentication-manager>
	
	<beans:bean id="springUserServiceImpl" class="com.vektorel.assetman.web.utilities.SpringUserServiceImpl" />	

</beans:beans>